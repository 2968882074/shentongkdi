<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yidu.shentongkdi.dao.TotalwatehouseDao">

    <resultMap id="BaseResultMap" type="com.yidu.shentongkdi.entity.Totalwatehouse">
        <!--@Table totalwatehouse-->
        <result property="twid" column="twid" jdbcType="INTEGER"/>
        <result property="twname" column="twname" jdbcType="VARCHAR"/>
        <result property="twtime" column="twtime" jdbcType="VARCHAR"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          twid, twname, twtime, state, code
        from shentong.totalwatehouse
        where twid = #{twid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          twid, twname, twtime, state, code
        from shentong.totalwatehouse
        <where>
            <if test="twname!=null">
                and twname like '%${where}%'
            </if>
        </where>
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          twid, twname, twtime, state, code
        from shentong.totalwatehouse
        <where>
            <if test="twid != null">
                and twid = #{twid}
            </if>
            <if test="twname != null and twname != ''">
                and twname = #{twname}
            </if>
            <if test="twtime != null and twtime != ''">
                and twtime = #{twtime}
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
            <if test="code != null and code != ''">
                and code = #{code}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="twid" useGeneratedKeys="true">
        insert into shentong.totalwatehouse(twname, twtime, state, code)
        values (#{twname}, #{twtime}, #{state}, #{code})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update shentong.totalwatehouse
        <set>
            <if test="twname != null and twname != ''">
                twname = #{twname},
            </if>
            <if test="twtime != null and twtime != ''">
                twtime = #{twtime},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
        </set>
        where twid = #{twid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from shentong.totalwatehouse where twid = #{twid}
    </delete>

</mapper>