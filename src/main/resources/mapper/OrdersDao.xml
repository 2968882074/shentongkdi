<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yidu.shentongkdi.dao.OrdersDao">

    <resultMap id="BaseResultMap" type="com.yidu.shentongkdi.entity.Orders">
        <!--@Table orders-->
        <result property="oid" column="oid" jdbcType="INTEGER"/>
        <result property="picid" column="picid" jdbcType="INTEGER"/>
        <result property="seid" column="seid" jdbcType="INTEGER"/>
        <result property="weight" column="Weight" jdbcType="NUMERIC"/>
        <result property="amount" column="Amount" jdbcType="NUMERIC"/>
        <result property="amountstate" column="Amountstate" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
    </resultMap>
    <!-- 统计行数 -->
    <select id="count" resultType="int">
        select
          count(1)
        from shentong.orders
        where  oid = #{oid}
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          oid, picid, seid, Weight, Amount, Amountstate, state
        from shentong.orders
        where oid = #{oid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          oid, picid, seid, Weight, Amount, Amountstate, state
        from shentong.orders
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          oid, picid, seid, Weight, Amount, Amountstate, state
        from shentong.orders
        <where>
            <if test="oid != null">
                and oid = #{oid}
            </if>
            <if test="picid != null">
                and picid = #{picid}
            </if>
            <if test="seid != null">
                and seid = #{seid}
            </if>
            <if test="weight != null">
                and Weight = #{weight}
            </if>
            <if test="amount != null">
                and Amount = #{amount}
            </if>
            <if test="amountstate != null">
                and Amountstate = #{amountstate}
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="oid" useGeneratedKeys="true">
        insert into shentong.orders(picid, seid, Weight, Amount, Amountstate, state)
        values (#{picid}, #{seid}, #{weight}, #{amount}, #{amountstate}, #{state})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update shentong.orders
        <set>
            <if test="picid != null">
                picid = #{picid},
            </if>
            <if test="seid != null">
                seid = #{seid},
            </if>
            <if test="weight != null">
                Weight = #{weight},
            </if>
            <if test="amount != null">
                Amount = #{amount},
            </if>
            <if test="amountstate != null">
                Amountstate = #{amountstate},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
        </set>
        where oid = #{oid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from shentong.orders where oid = #{oid}
    </delete>
    <!--删除多个-->
    <delete id="deleteByIds" parameterType="java.lang.String">
        delete from shentong.orders where oid in
        <foreach collection="array" item="id" index="index" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

</mapper>